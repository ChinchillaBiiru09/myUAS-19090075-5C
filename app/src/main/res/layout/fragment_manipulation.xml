<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="@dimen/_20sdp"
    android:orientation="vertical"
    tools:context=".Fragment.ManipulationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_40sdp"
            android:text="ID : "
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/guava"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/et_id"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:backgroundTint="@color/guava"
            android:hint="Tuliskan ID"
            android:inputType="number"
            android:textColorHint="@color/lightGray"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_40sdp"
            android:text="User ID : "
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/guava"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/et_userId"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:backgroundTint="@color/guava"
            android:hint="Tuliskan User ID"
            android:inputType="number"
            android:textColorHint="@color/lightGray"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_40sdp"
            android:text="ID Field : "
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/guava"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/et_idFiekd"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:backgroundTint="@color/guava"
            android:hint="Tuliskan ID"
            android:inputType="number"
            android:textColorHint="@color/lightGray"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_40sdp"
            android:text="Title : "
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/guava"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/et_title"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:backgroundTint="@color/guava"
            android:hint="Tuliskan Title"
            android:inputType="text"
            android:textColorHint="@color/lightGray"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_40sdp"
            android:text="Desc : "
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/guava"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/et_desc"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:backgroundTint="@color/guava"
            android:hint="Tuliskan ID"
            android:inputType="text"
            android:textColorHint="@color/lightGray"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_gravity="center"
        android:background="@drawable/bg_button_radius"
        android:text="Update"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/background"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_ResponseCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="16dp"
        android:text="@string/blank"
        android:textColor="@color/guava"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_Post"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ResponseCode" />

</LinearLayout>